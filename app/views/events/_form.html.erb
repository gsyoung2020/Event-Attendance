<%= form_for(event) do |f| %>
    <% if event.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
  
        <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>

    <div class="field">
      <%= f.label :start_time %>
      <%= f.datetime_select(:start_time, order: [:month, :day, :year], start_year: 2021) %>
    </div>

    <div class="field">
      <%= f.label :end_time %>
      <%= f.datetime_select(:end_time, order: [:month, :day, :year], start_year: 2021) %>
    </div>

    <div class="field">
      <%= f.label :frequency %>
      <%= f.select(:frequency, [['Daily'],['Weekly'],['Monthly'],['Annually']]) %>
    </div>
  
    <div class="field">
      <%= f.label :event_location %>
      <%= f.text_field :event_location %>
    </div>

    <div class="field">
      <%= f.label "Image" %>
      <%= f.file_field :image %>
    </div> 
  
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

  <br>
  <h1> Attendees </h1>
  <%= form_for(@event) do |f| %>
    <div class="form-group">
        <div class="row">
            <div class="col-md-offset-2 col-md-8">
                <%= f.collection_check_boxes :member_ids, Member.all, :id, :full_name do |cb| %>
                  <% cb.label(class: "checkbox-inline input_checkbox" ) {cb.check_box(class: "checkbox") + cb.text} %>
                <% end %>
            </div>
        </div>
    </div>

    <div class="actions">
        <%= f.submit %>
    </div>
  <% end %>